generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Course {
  id          String   @id @default(uuid())
  title       String
  subject     String   // SQLite doesn't support Enums
  credits     Float
  gradeLevel  Int
  grade       String?
  isLabScience Boolean @default(false)
  isNCAACore   Boolean @default(false)
  term        String
  isArchived  Boolean  @default(false)
  userId      String   @default("user_placeholder")
  
  // ... existing fields
  units    Unit[]
  hourLogs    HourLog[] // Track instructional time
  objectives  LearningObjective[]

  @@index([userId])
}

model HourLog {
  id          String   @id @default(uuid())
  courseId    String
  course      Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  date        DateTime @default(now())
  minutes     Int      // e.g. 60 for 1 hour
  activity    String?  // e.g. "Read Chapter 4", "Lab Experiment"
  createdAt   DateTime @default(now())

  @@index([courseId])
  @@index([date])
}

model Unit {
  id          String   @id @default(uuid())
  courseId    String
  course      Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  title       String
  weekNumber  Int
  description String?
  isCompleted Boolean  @default(false)
  lessons     Lesson[]

  @@index([courseId])
}

model Lesson {
  id          String   @id @default(uuid())
  unitId      String
  unit        Unit     @relation(fields: [unitId], references: [id], onDelete: Cascade)
  title       String
  contentType String   // 'reading', 'video', 'quiz'
  content     String?  // Markdown content
  videoUrl    String?
  quizScore   Int?     // Number of correct answers
  quizTotal   Int?     // Total questions
  isCompleted Boolean  @default(false)

  @@index([unitId])
}

model Extracurricular {
  id          String   @id @default(uuid())
  userId      String
  title       String   // e.g. "Varsity Soccer", "Robotics Club"
  role        String?  // e.g. "Captain", "Member"
  hours       Int      @default(0)
  description String?
  category    String   // 'Sport', 'Club', 'Volunteer', 'Work'
  createdAt   DateTime @default(now())
}

model CourseTemplate {
  id          String   @id @default(uuid())
  title       String
  subject     String
  credits     Float    @default(1.0)
  isLabScience Boolean @default(false)
  isNCAACore   Boolean @default(false)
  description String?
  
  // Link to objectives if we want templates to have them
  objectives LearningObjective[] 
}

model LearningObjective {
  id          String   @id @default(uuid())
  courseTemplateId String?
  courseTemplate CourseTemplate? @relation(fields: [courseTemplateId], references: [id])
  
  // Also link to active Courses
  courseId    String?
  course      Course?   @relation(fields: [courseId], references: [id], onDelete: Cascade)

  description String
  order       Int       @default(0) // Sequence order
  prerequisites String? // JSON array of IDs? Or we can just use description references for now.

  mastery     ObjectiveMastery[]
  attempts    QuestionAttempt[]
}

model ObjectiveMastery {
  id               String   @id @default(uuid())
  userId           String
  learningObjectiveId String
  learningObjective LearningObjective @relation(fields: [learningObjectiveId], references: [id], onDelete: Cascade)

  masteryScore     Float    @default(0.0) // 0-100
  explanationScore Float    @default(0.0) // 0-100 or 0-1
  numAttempts      Int      @default(0)
  numHintsUsed     Int      @default(0)
  lastAssessedAt   DateTime @default(now())

  @@unique([userId, learningObjectiveId])
}

model QuestionAttempt {
  id               String   @id @default(uuid())
  userId           String
  learningObjectiveId String
  learningObjective LearningObjective @relation(fields: [learningObjectiveId], references: [id], onDelete: Cascade)

  questionId       String?   // External or generated ID
  isCorrect        Boolean
  numHintsUsed     Int       @default(0)
  responseTimeMs   Int       @default(0)
  rawAnswer        String?   // The text they typed or selected
  createdAt        DateTime  @default(now())

  @@index([userId])
}
